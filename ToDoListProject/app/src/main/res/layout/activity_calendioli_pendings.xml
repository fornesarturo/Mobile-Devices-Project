<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="watsalacanoa.todolisttest.caldroidStuff.CalendioliPendings">

    <TextView
        android:id="@+id/calendioli_startdate"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/calendioli_pendings_no_events"
        android:layout_below="@+id/calendioli_enddate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <ListView
        android:id="@+id/lvCalendioli_Pendings"
        android:layout_below="@id/calendioli_pendings_no_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

    <Spinner
        android:id="@+id/caliendoli_enddate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>
